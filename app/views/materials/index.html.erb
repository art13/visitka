
<section class="section-content section-services" id="section-services">
    <div class="container">
      <div class="row">
        <div class="span3">
          <h2 class="section-title">
            Программы
            <small>Здесь представлены наши программные продукты </small>
          </h2>
        </div>
        <div class="span9">
          <div class="row">
              <%@materials.each do |material|%>
                  <div class="span3">
                      <div class="text-center">
                        <figure>
                          <a href="/programms/<%=material.id%>">
                            <i class="icon-cogs icon-8x icon-border"></i>
                          </a>
                        </figure>
                        <h4>
                          <%=link_to material.name, "/programms/#{material.id}" %>
                        </h4>
                        <p><%=material.preview%></p>
                      </div>
                  </div>
              <%end%>  
          </div>
        </div>

      </div>
    </div>
  </section>
    <section class="section-content section-clients-on-carousel section-color-graylighter" id="section-clients-on-carousel">
    <div class="container">
      <div class="row">
        <div class="span3">
          <h2 class="section-title">
            Клиенты
            <small></small>
          </h2>
        </div>
        <div class="span9">
          <div class="row">
            <div class="carousel carousel-mini slide" data-pause="true" id="myCarouselClients">
              <div class="carousel-nav">
                <div class="btn-group">
                  <a class="btn btn-link btn-small" data-slide="prev" href="#myCarouselClients">
                    <i class="icon-chevron-left"></i>
                  </a>
                  <a class="btn btn-link btn-small" data-slide="next" href="#myCarouselClients">
                    <i class="icon-chevron-right"></i>
                  </a>
                </div>
              </div>
              <div class="carousel-inner">
                <%clients=Client.first(6)%>
                    <%unless clients.empty?%>
                          <%arr=[]
                            j=0
                            j_max=clients.size%>
                            <%while j!=3%>
                              <% arr<<clients.shift%>
                              <%j+=1%>
                            <%end%>
                            <div class="item active">
                              <%arr.each do |client|%>
                                <%unless client.nil?%>
                                    <div class="span3">
                                      <figure class="hover-figcaption">
                                        <span>
                                          <%=image_tag client.photo.url(:medium)%>
                                          <div class="figcaption">
                                            <strong><%=client.name%></strong>
                                          </div>
                                        </span>
                                      </figure>
                                    </div> 
                                  <%end%>    
                              <%end%>
                            </div>  
                              <%unless clients.empty?%>
                                <div class="item">
                                    <%clients.each do |client|%>
                                      <div class="span3">
                                          <figure class="hover-figcaption">
                                            <span>
                                              <%=image_tag client.photo.url(:medium)%>
                                              <div class="figcaption">
                                                <strong><%=client.name%></strong>
                                              </div>
                                            </span>
                                          </figure>
                                       </div>         
                                    <%end%> 
                                  </div>   
                              <%end%>      
                    <%end%>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%content_for :footer do %>
    <span></span>
  <%end%>