<%= form_for @order, :remote=>true,:html=>{:id=>'order_form'}, :method=>'post' do |f|%>
	<table class='table table-striped table-bordered table-condensed'>
		<thead>
			<tr>
				<th>Программа</th>
				<th>Стоимость(за ед.)</th>
				<th>Количество</th>
				<th>Сумма</th>
			</tr>
		</thead>
	    <tbody>
		
				<%=f.hidden_field :status, :value=>'cart'%>
				<%@products.each do |product|%>
					<%=f.fields_for :line_items do |lf|%>
							<tr >
								<td><label><%=product.name%></label>
								</td>
								<td >
									<label><%=product.price%></label>
									<%= lf.hidden_field "#{product.id}[price]", :value=>product.price, :class=>'prpr'%>
								</td>
								<td>
									<%= lf.text_field "#{product.id}[quantity]", :class=>'span1 item-quantity',:value=>0%>
								</td>
								<td class='summa'></td>	
							</tr>
					<%end%>
				<%end%>			
		</tbody>
	</table>
<%end%>
