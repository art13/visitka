<div class='container'>
	<div class='row span4'>
		<h3>Забыли пароль?</h3>

		<%= form_for(resource, :as => resource_name, :url => '/users/passwords',:class=>"form-vertical", :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.label "email, на который зарегестрирован аккаунт" %>
		  <%= f.email_field :email, :autofocus => true , :class=>'span3'%></div>
		  
		  <div><%= f.submit "сбросить пароль" , :class=>'btn clear_pass'%></div>
		<% end %>
		<%#= render "devise/shared/links" %>
	</div>
</div>