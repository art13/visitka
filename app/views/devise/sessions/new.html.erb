<div class='container'>
  <div class='row span4'>
    <h2>Войти</h2>

    <%= form_for(resource, :as => resource_name,:class=>"form-vertical", :url => session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div>
      	<%= f.label :email %>
      	<%= f.email_field :email, :autofocus => true, :class=>'span4'%></div>
      <div>
      		<%= f.label "Пароль" %>
      		<%= f.password_field :password, :class=>'span4' %>
      </div>

      <% if devise_mapping.rememberable? %>
          <label class='checkbox'> <%= f.check_box :remember_me %> Запомнить меня </label>        
      <% end %>
      <br>
      <div><%= f.submit "Войти" , :class=>'btn btn-small btn-primary'%> или <%= link_to "Зарегистрироваться", '/users/sign_up', :class=> 'btn btn-small btn-primary'%></div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>