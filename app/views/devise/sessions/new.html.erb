<div class='container'>
  <div class='row span3'>
    <h2>Авторизация</h2>

    <%= form_for(resource, :as => resource_name,:class=>"form-vertical", :url => session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div>
      	<%= f.label :email %>
      	<%= f.email_field :email, :autofocus => true, :class=>'span3'%></div>
      <div>
      		<%= f.label "Пароль" %>
      		<%= f.password_field :password, :class=>'span3' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div style='display:inline'>
          <%= f.check_box :remember_me %> <label style='display:inline'> Запомнить меня</label><br />
        </div>
      <% end -%>
      <br>
      <div><%= f.submit "Войти" , :class=>'btn'%></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>