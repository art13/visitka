<div class='container'>
	<div class='row span4'>
		<h2>Изменить пароль</h2>
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }),:class=>"form-vertical" do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.hidden_field :reset_password_token %>

		  <div><%= f.label :password, "Новый пароль" %>
		  <%= f.password_field :password, :autofocus => true %></div>

		  <div><%= f.label :password_confirmation, "Подтвердить пароль" %>
		  <%= f.password_field :password_confirmation %></div>

		  <div><%= f.submit "Изменить пароль" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>