 <%= form_for(resource, :as => resource_name,:class=>"form-vertical",:id=>'request-form', :url => registration_path(resource_name)) do |f| %>
	<div class='control-group'>
              <%= f.text_field :company, :class=>'span3', :id=>"request-name",:placeholder=>'Компания или физ. лицо'%>
    </div>
    <div class="ui-widget control-group", style='font-size:1em !important;'>
              <label for="request-region"></label>
              <%= f.text_field :region ,:class=>"span3",:id=>'tags', :placeholder=> 'Регион', :style=>'font-size:1em !important;'%>
     </div>
    <div class="control-group">
              <label for="request-contact"></label>
              <%= f.text_field :contact ,:class=>"span3",:id=>'request-contact', :placeholder=> 'Контактное лицо'%>
    </div>
    <div class='control-group'>
              <label for="request-name-surname"></label>    
              <%= f.text_field :phone ,:class=>"span3", :id=>"request-phone", :placeholder => 'Контактный телефон'%>
    </div>
	<div class="control-group">
              <label for="request-email"></label>
              <%= f.email_field :email ,:class=>"span3",:id=>'request-email', :placeholder=> 'email*'%>
    </div>
    <div class='control-group'>
            	<label style='display:inline'>Пароль</label><span style='color:red'>*</span><br />
            	<%= f.password_field :password, :class=>'span3' %>
    </div>
    <div class='control-group'>
            	<label style='display:inline'>Подтверждение пароля</label><span style='color:red'>*</span><br />
              <%= f.password_field :password_confirmation, :class=>'span3' %>
    </div>       
		<p class="help-inline err_reqq" style='display: block;'>
			<%#= devise_error_messages! %>
		</p>
        	 <div><%= f.submit "Зарегистрироваться" ,:class=>'btn btn-small'%></div>
<% end %>
     